@startuml

participant  user <<(C,#ADD1B2)>>
participant  ConsoleHandler <<(C,#ADD1B2)>>
participant  ConsoleEditor <<(C,#ADD1B2)>>
participant  CommandHandler <<(C,#ADD1B2)>>

user -> ConsoleHandler : command := accepts()
ConsoleHandler -> CommandHandler : result := handle(command)

loop : result is EditorException
ConsoleHandler -> ConsoleEditor : start()
ConsoleHandler -> ConsoleEditor : text := getContent()
ConsoleHandler -> ConsoleHandler : command.setText(text)
ConsoleHandler -> CommandHandler : result := handle(command)
end

@enduml